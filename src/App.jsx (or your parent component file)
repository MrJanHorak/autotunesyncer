const [instrumentVideos, setInstrumentVideos] = useState({});

const handleVideoReady = (videoUrl, instrument) => {
  setInstrumentVideos(prev => ({
    ...prev,
    [instrument]: videoUrl
  }));
};

return (
  <div>
    {instruments.map(instrument => (
      <VideoRecorder
        key={instrument}
        instrument={instrument}
        onVideoReady={handleVideoReady}
        minDuration={minDuration}
        // Pass the current video URL for this instrument
        currentVideo={instrumentVideos[instrument]}
      />
    ))}
  </div>
);
